{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "cli": {
    "packageManager": "npm",
    "analytics": false
  },
  "newProjectRoot": "projects",
  "projects": {
    "upov-ds": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "src/main.ts",
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              {
                "glob": "**/*",
                "input": "src/assets",
                "output": "assets"
              },
              {
                "glob": "**/*",
                "input": "projects/upov-ui/src/assets",
                "output": "assets"
              }
            ],
            "styles": [
              "upov-ui/styles/upov-ui.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kB",
                  "maximumError": "1MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true,
              "styles": [
                "src/styles.scss",
                "projects/upov-ui/src/styles/upov-ui.scss"
              ]
            },
            "lib-test": {
              "assets": [
                {
                  "glob": "**/*",
                  "input": "src/assets",
                  "output": "assets"
                }
              ],
              "styles": [
                "upov-ui/styles/upov-ui.scss"
              ]
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "upov-ds:build:production"
            },
            "development": {
              "buildTarget": "upov-ds:build:development"
            },
            "lib-test": {
              "buildTarget": "upov-ds:build:lib-test"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        }
      }
    },
    "upov-ui": {
      "projectType": "library",
      "root": "projects/upov-ui",
      "sourceRoot": "projects/upov-ui/src",
      "prefix": "upov",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "configurations": {
            "production": {
              "tsConfig": "projects/upov-ui/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/upov-ui/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:unit-test",
          "options": {
            "tsConfig": "projects/upov-ui/tsconfig.spec.json"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/upov-ui/.storybook",
            "browserTarget": "upov-ui:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/upov-ui"
            ],
            "port": 6006,
            "styles": [
              "projects/upov-ui/src/styles/upov-ui.scss"
            ],
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/upov-ui/src/assets",
                "output": "assets"
              }
            ]
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/upov-ui/.storybook",
            "browserTarget": "upov-ui:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/upov-ui"
            ],
            "outputDir": "dist/storybook/upov-ui",
            "styles": [
              "projects/upov-ui/src/styles/upov-ui.scss"
            ]
          }
        }
      }
    }
  }
}
